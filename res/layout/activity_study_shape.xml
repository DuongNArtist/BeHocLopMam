<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btnShapeSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_2"
            android:contentDescription="@drawable/icon_speaker"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_speaker"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnShapeReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_0"
            android:contentDescription="@drawable/icon_quit"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_quit" />

        <TextView
            android:id="@+id/txtShapeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_03"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/study_shape"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black_1"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/btnShape0"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_0"
            android:contentDescription="@drawable/shape_0"
            android:src="@drawable/shape_0" />

        <ImageButton
            android:id="@+id/btnShape1"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_1"
            android:contentDescription="@drawable/shape_1"
            android:src="@drawable/shape_1" />

        <ImageButton
            android:id="@+id/btnShape2"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_2"
            android:contentDescription="@drawable/shape_2"
            android:src="@drawable/shape_2" />

        <ImageButton
            android:id="@+id/btnShape3"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_3"
            android:contentDescription="@drawable/shape_3"
            android:src="@drawable/shape_3" />

        <ImageButton
            android:id="@+id/btnShape4"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_4"
            android:contentDescription="@drawable/shape_4"
            android:src="@drawable/shape_4" />

        <ImageButton
            android:id="@+id/btnShape5"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_5"
            android:contentDescription="@drawable/shape_5"
            android:src="@drawable/shape_5" />
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-9404075236503358/7924797629"
        app:loadAdOnCreate="true" >
    </com.google.ads.AdView>

</LinearLayout>