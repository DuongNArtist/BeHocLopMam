<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btnNumberSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_2"
            android:contentDescription="@drawable/icon_speaker"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_speaker"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnNumberReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_0"
            android:contentDescription="@drawable/icon_quit"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_quit" />

        <TextView
            android:id="@+id/txtNumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_03"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/study_number"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black_1"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnNumber0"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_0"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />

        <Button
            android:id="@+id/btnNumber1"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_1"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />

        <Button
            android:id="@+id/btnNumber2"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_2"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />

        <Button
            android:id="@+id/btnNumber3"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_3"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />

        <Button
            android:id="@+id/btnNumber4"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_4"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnNumber5"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_4"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />

        <Button
            android:id="@+id/btnNumber6"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_3"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />

        <Button
            android:id="@+id/btnNumber7"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_2"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />

        <Button
            android:id="@+id/btnNumber8"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_1"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />

        <Button
            android:id="@+id/btnNumber9"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button_0"
            android:gravity="center"
            android:textSize="@dimen/text_size_larger" />
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-9404075236503358/7924797629"
        app:loadAdOnCreate="true" >
    </com.google.ads.AdView>

</LinearLayout>