<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical" >

    <com.dsa.behoclopmam.activities.BouncingImageView
        android:id="@+id/imgMainBalloon0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balloon_0" />

    <com.dsa.behoclopmam.activities.BouncingImageView
        android:id="@+id/imgMainBalloon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balloon_1" />

    <com.dsa.behoclopmam.activities.BouncingImageView
        android:id="@+id/imgMainBalloon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balloon_2" />

    <com.dsa.behoclopmam.activities.BouncingImageView
        android:id="@+id/imgMainBalloon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balloon_3" />

    <com.dsa.behoclopmam.activities.BouncingImageView
        android:id="@+id/imgMainBalloon4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balloon_4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_larger" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/btnMainStudy"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_2"
                android:contentDescription="@drawable/icon_study"
                android:paddingBottom="@dimen/padding_larger"
                android:paddingLeft="@dimen/padding_larger"
                android:paddingRight="@dimen/padding_larger"
                android:paddingTop="@dimen/padding_large"
                android:src="@drawable/icon_study" />

            <TextView
                android:id="@+id/txtMainStudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/main_study"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/btnMainGame"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_1"
                android:contentDescription="@drawable/icon_game"
                android:paddingBottom="@dimen/padding_larger"
                android:paddingLeft="@dimen/padding_larger"
                android:paddingRight="@dimen/padding_larger"
                android:paddingTop="@dimen/padding_large"
                android:src="@drawable/icon_game" />

            <TextView
                android:id="@+id/txtMainGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/main_game"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgMainDino"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:contentDescription="@drawable/dino_dance"
        android:src="@drawable/dino_dance" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btnMainQuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_0"
            android:contentDescription="@drawable/icon_quit"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_quit" />

        <ImageButton
            android:id="@+id/btnMainRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_4"
            android:contentDescription="@drawable/icon_quit"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_star" />

        <ImageButton
            android:id="@+id/btnMainApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_3"
            android:contentDescription="@drawable/icon_quit"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_app" />
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-9404075236503358/7924797629"
        app:loadAdOnCreate="true" >
    </com.google.ads.AdView>

</FrameLayout>