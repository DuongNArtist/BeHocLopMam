<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btnColorSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_2"
            android:contentDescription="@drawable/icon_speaker"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_speaker"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnColorReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_0"
            android:contentDescription="@drawable/icon_quit"
            android:padding="@dimen/padding_small"
            android:src="@drawable/icon_quit" />

        <TextView
            android:id="@+id/txtColorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_03"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/study_color"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black_1"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnColor0"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_01"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnColor1"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_00"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnColor2"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_02"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnColor3"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_03"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnColor4"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_05"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnColor5"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_07"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnColor6"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_08"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnColor7"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_09"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnColor8"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_12"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnColor9"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/background_13"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-9404075236503358/7924797629"
        app:loadAdOnCreate="true" >
    </com.google.ads.AdView>

</LinearLayout>